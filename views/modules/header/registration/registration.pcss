.registration {
    font-weight: 700;
    color: $yellow;
    font-family: 'Righteous';

    &__item {
        display: inline-block;
        margin: 20px 10px;
        text-decoration: none;
        border-bottom: 1px solid transparent;
        font-size: 20px;
        transition: all .2s;
        color: $blueviolet;

        &:hover {
            border-bottom: 1px solid $blueviolet;
        }

        &_signin {
            margin-right: 5px;
        }
    }


}
